<%- include('../header.ejs')%> <br> <br>
<h1 class="mt-5 text-center bg-white">Course Edit</h1>
  
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="/courseUpdate/<%= d._id %>" method="post">
        <div class="mb-3">
            <label>Name</label>
            <input type="text" value="<%= d.name %>" name="name" class="form-control">
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input type="email" value="<%= d.email %>" name="email" class="form-control">
        </div>
        <div class="mb-3">
            <label>Phone No.</label>
            <input type="number" value="<%= d.phone %>" name="phone" class="form-control">
        </div>
        <div class="mb-3">
            <label>D.O.B</label>
            <input type="date" value="<%= d.dob %>" name="dob" class="form-control">
        </div>
        <div class="mb-3">
            <label>Address</label>
              <textarea name="address" class="form-control"><%= d.address %></textarea>    
        </div>
        <div class="mb-3">
            <label>Gender</label>
            <br>
            <input type="radio" name="Gender" value="male">Male
            <br>
            <input type="radio" name="Gender" value="female">Female
        </div>
        <div class="mb-3">
            <label>Education</label>
            <select class="form-control" name="education">
                <option value="">select college</option>
                <option value="10th">10th</option>
                <option value="12th">12th</option>
            </select>
        </div>
        <div class="mb-3">
            <label>Course</label>
            <input 
            type="text"
            name="course"
            value="btech"
            readonly
            class="form-control">
        </div>
        <button type="submit" class="btn btn-info">Update</button>
      </div>
    </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<%- include('../footer.ejs')%>